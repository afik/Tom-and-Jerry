<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.afik.tomnjerry.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where&apos;s Jerry?"
        android:id="@+id/toMaps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:typeface="monospace"
        android:theme="@style/Base.TextAppearance.AppCompat.Button"
        android:onClick="onClickMaps" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell spike"
        android:id="@+id/toQr"
        android:typeface="monospace"
        android:theme="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_alignTop="@+id/toMaps"
        android:layout_marginTop="66dp"
        android:layout_alignRight="@+id/toMaps"
        android:layout_alignEnd="@+id/toMaps"
        android:layout_alignLeft="@+id/toMaps"
        android:layout_alignStart="@+id/toMaps"
        android:onClick="onClickQR" />
</RelativeLayout>
